<%= turbo_frame_tag dom_id(note, :status) do %>
  <div class="btn-group">
    <button type="button" class="btn btn-<%= status_button_class(note.status)%>"><%= format_status(note.status) %></button>
    <button type="button" class="btn btn-<%= status_button_class(note.status)%> dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
      <span class="visually-hidden">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to 'In Progress', note_path(note, status: 'in_progress'), data: { turbo_method: :put }, class: "dropdown-item" %></li>
      <li><%= link_to 'Completed', note_path(note, status: 'completed'), data: { turbo_method: :put }, class: "dropdown-item" %></li>
    </ul>
  </div>
<% end %>
